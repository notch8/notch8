%head
  %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}/
  %title Notch8 - {{ page.title }}

  {{ 'main' | stylesheet }}

  %script{:src =>"//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"}
  {{ 'bootstrap.min' | javascript }}
  {{ 'jquery.cycle.lite' | javascript }}

  %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
  %link{:href => "/articles.atom", :rel => "alternate", :title => "Feed for Notch8", :type => "application/atom+xml"}/


  %body#index
    #topNav
      .row
        .logoContainer.span2
          %a{:href => "/"}
            %img{:src => "{{'logo_notch8_small.gif' | asset_path}}"}
        .navContainer.span8
          %ul.nav.nav-pills
            {% for link in page.navigation %} 
            {% if page.url == link.url %} 
            %li{class: 'active'}
              %a{:href=> "#"}
                {{link.text}}
            {% else %} 
            %li
              %a{:href => "{{link.url}}"} {{link.text}}
            {% endif %} 
            {% endfor %} 
    #mainContent
      {{ content }}
